    <meta name="image" content="https://www.kek-tipp.com/og/kek_tipp_og.jpg">
    <!-- Schema.org for Google -->
    <meta itemprop="name" content="KEK WM Tippspiel 2018">
    <meta itemprop="description" content="Das Tippspiel für die WM 2018 von KEK Anwendungssysteme GmbH. Mitspielen und 500€ für eine wohltätige Organisation Ihrer Wahl gewinnen.">
    <meta itemprop="image" content="https://www.kek-tipp/og/kek_tipp_og.jpg">
    <!-- Open Graph general (Facebook, Pinterest & Google+) -->
    <meta name="og:title" content="KEK WM Tippspiel 2018">
    <meta name="og:description" content="Das Tippspiel für die WM 2018 von KEK Anwendungssysteme GmbH. Mitspielen und 500€ für eine wohltätige Organisation Ihrer Wahl gewinnen.">
    <meta name="og:image" content="https://www.kek-tipp.com/og/kek_tipp_og.jpg">
    <meta name="og:url" content="https://www.kek-tipp.com/">
    <meta name="og:site_name" content="KEK Tippspiel">
    <meta name="og:locale" content="de">
    <meta name="og:type" content="website">
    <title><%= content_for?(:title) ? yield(:title) : "KEK Tippspiel" %></title>
    <%= csrf_meta_tags %>
    <%= render 'shared/favicons' %>
    <%= stylesheet_link_tag "application", :media => "all" %>

    <%= javascript_include_tag "application" %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
