    <div class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">WM-Tippspiel</a>
        <div class="navbar-collapse collapse navbar-responsive-collapse">
          <ul class="nav navbar-nav">
            <li><%= link_to "Spiele", "/"  %></li>
            <li><%= link_to "Gruppenphase", "/groups"  %></li>
            <li><%= link_to "Spielstand", "/tabelle" %></li>
            <li><%= link_to "Anleitung", "/how-to-play" %></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
          <li><% if user_signed_in? %><%= link_to "Ausloggen", destroy_user_session_path, method: :delete, class: "pull-right"  %><% else %><%= link_to "Anmelden", login_path, class: "pull-right"  %><% end %></li>
