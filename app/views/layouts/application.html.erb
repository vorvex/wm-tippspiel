    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-TZ95235"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
    <!--[if !IE]>
    <div id="preloader" class="preloader">
      <div class="lds-css ng-scope">
        <div style="width:100%;height:100%" class="lds-ball">
          <div></div>
        </div>
      </div>
    </div>
    <![endif]-->
    <div class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">
          <%= image_tag 'KEK-Tippspiel.png', :alt => "WM Tippspiel KEK Anwendungssysteme GmbH", :class => 'logo', height: '30px' %>
        </a>
        <div class="navbar-collapse collapse navbar-responsive-collapse">
          <ul class="nav navbar-nav">
            <% if user_signed_in? %>
              <li><%= link_to "Spiele", "/"  %></li>
              <li><%= link_to "Gruppenphase", "/groups"  %></li>
              <li><%= link_to "Tipp-Tabelle", "/tabelle" %></li>
            <% end %>
            <li><%= link_to "Anleitung", "/how-to-play" %></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <% if current_user.role_name === 'admin' %>
            <li><%= link_to "Admin", admin_path %></li>
            <% end %>
            <li><%= link_to "Ausloggen", destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to "Anmelden", login_path %></li>
            <li><%= link_to "Registrieren", signup_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

    <div class="container" style="margin-top: 70px;">
          <%= bootstrap_flash %>
          <%= yield %>

      <footer>
        <p>
          &copy; 2018 <%= link_to "KEK Anwendungssysteme GmbH", "http://www.kek-it.de", target: "_blank" %>   |   
          <%= link_to "Datenschutz", datenschutz_path, target: "_blank" %>   |   
          <%= link_to "Impressum", impressum_path, target: "_blank" %>   |   
          <%= link_to "Nutzungsrichtlinien", richtlinien_path, target: "_blank" %>   |   Emoji artwork provided by 
          <%= link_to "EmojiOne", "http://emojione.com" %>   |   
          <%= link_to "Problem melden", problem_melden_path %>
        </p>
      </footer>

    </div> <!-- /container -->
    <script type="text/javascript">
      element = document.getElementById("preloader");
      element.remove();
    </script>  
  </body>
</html>
