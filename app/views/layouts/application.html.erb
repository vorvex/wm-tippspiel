    <div class="container" style="margin-top: 70px;">
          <%= bootstrap_flash %>
          <%= yield %>

      <footer>
        <p>
          &copy; 2018 KEK Anwendungssysteme GmbH   |   Created by: Leon Dahmer  |
          <%= link_to "Datenschutz", datenschutz_path, target: "_blank" %>   |   
          <%= link_to "Impressum", impressum_path, target: "_blank" %>   |   
          <%= link_to "Nutzungs-Richtlinien", richtlinien_path, target: "_blank" %>
        </p>
      </footer>

    </div> <!-- /container -->

